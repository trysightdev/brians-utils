# Build guvcview on raspberry pi 5 - bookworm - arm64
```bash
git clone https://git.code.sf.net/p/guvcview/git-master guvcview-git-master
cd guvcview-git-master/
make
ls
cat INSTALL
nano build_script.sh
ls
chmod +x build_script.sh
./build_script.sh
ls
cat Makefile.am
cp Makefile.am Makefile
make
sudo apt-get install autoconf automake libtool gettext
ls
rm Makefile
sudo apt-get install autoconf automake libtool gettext
ls
cd guvcview-git-master/
./bootstrap.sh
sudo apt-get install intltool
./bootstrap.sh
sudo apt-get update
sudo apt-get install libv4l-dev libudev-dev libusb-1.0-0-dev libavcodec-dev libavutil-dev libpng-dev
./configure
sudo apt-get install libsdl2-dev
./configure
sudo apt-get install libgsl-dev
./configure
sudo apt install qtbase5-dev
./configure
./bootstrap.sh
make
ls
sudo make install
guvcview
sudo guvcview/
sudo ./usr/local/bin/guvcview
cd ~
sudo guvcview
sudo find / -name libgviewv4l2core-2.2.so.2
sudo reboot
ls
cd guvcview-git-master/
ls
cd ../
guvcview
sudo find / -name libgviewv4l2core-2.2.so.2
sudo ldconfig
guvcview
```
